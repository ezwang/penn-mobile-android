<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pennapps.labs.pennmobile.MenuFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_margin="15sp"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <RelativeLayout
                android:id="@+id/dining_hall_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dining_hall_name"
                    style="@style/HallName" />

                <TextView
                    android:id="@+id/dining_hall_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/dining_hall_breakfast_title"
                android:layout_below="@+id/dining_hall_title"
                style="@style/MealName"
                android:text="@string/breakfast" />

            <TextView
                android:id="@+id/dining_hall_breakfast"
                android:layout_below="@+id/dining_hall_breakfast_title"
                style="@style/Menu" />

            <TextView
                android:id="@+id/dining_hall_brunch_title"
                android:layout_below="@+id/dining_hall_breakfast"
                style="@style/MealName"
                android:text="@string/brunch" />

            <TextView
                android:id="@+id/dining_hall_brunch"
                android:layout_below="@+id/dining_hall_brunch_title"
                style="@style/Menu" />

            <TextView
                android:id="@+id/dining_hall_lunch_title"
                android:layout_below="@+id/dining_hall_brunch"
                style="@style/MealName"
                android:text="@string/lunch" />

            <TextView
                android:id="@+id/dining_hall_lunch"
                android:layout_below="@+id/dining_hall_lunch_title"
                style="@style/Menu" />

            <TextView
                android:id="@+id/dining_hall_dinner_title"
                android:layout_below="@+id/dining_hall_lunch"
                style="@style/MealName"
                android:text="@string/dinner" />

            <TextView
                android:id="@+id/dining_hall_dinner"
                android:layout_below="@+id/dining_hall_dinner_title"
                style="@style/Menu" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>