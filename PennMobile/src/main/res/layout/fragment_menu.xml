<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.pennapps.labs.pennmobile.MenuFragment">
    <LinearLayout
        android:id="@+id/menu_parent"
        android:padding="15sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/dining_hall_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                tools:text="1920 Commons"
                android:id="@+id/dining_hall_name"
                style="@style/HallName" />

            <TextView
                android:id="@+id/dining_hall_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                tools:background="@drawable/label_green"
                tools:text="Open" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dining_hall_breakfast_title"
            style="@style/MealName"
            tools:visibility="visible"
            android:text="@string/breakfast" />

        <TextView
            android:id="@+id/dining_hall_breakfast"
            tools:visibility="visible"
            tools:text="Sausage"
            style="@style/Menu" />

        <TextView
            android:id="@+id/dining_hall_brunch_title"
            style="@style/MealName"
            android:text="@string/brunch" />

        <TextView
            android:id="@+id/dining_hall_brunch"
            style="@style/Menu" />

        <TextView
            android:id="@+id/dining_hall_lunch_title"
            style="@style/MealName"
            android:text="@string/lunch" />

        <TextView
            android:id="@+id/dining_hall_lunch"
            style="@style/Menu" />

        <TextView
            android:id="@+id/dining_hall_dinner_title"
            style="@style/MealName"
            android:text="@string/dinner" />

        <TextView
            android:id="@+id/dining_hall_dinner"
            style="@style/Menu" />
    </LinearLayout>
</ScrollView>