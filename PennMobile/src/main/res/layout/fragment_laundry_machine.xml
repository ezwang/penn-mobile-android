<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/no_results"
        android:text="@string/no_results"
        style="@style/NoResults" />

    <RelativeLayout
        tools:visibility="gone"
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

    <ProgressBar
        android:indeterminateTint="@color/color_primary"
        android:indeterminateTintMode="src_in"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/washer_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="0dp"
                    android:src="@drawable/washer"/>

                <ImageView
                    android:id="@+id/dryer_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/dryer"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/divider"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:layout_centerHorizontal="true"/>



                <TextView
                    android:id="@+id/washer_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/laundry_summary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dryer_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/laundry_summary"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/washer_summary_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/washer_summary"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="50dp">
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dryer_summary_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dryer_summary"
                    android:layout_alignLeft="@id/dryer_summary"
                    android:layout_alignTop="@id/washer_summary_rl">
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/washer_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/washer_summary_rl">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dryer_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/dryer_summary_rl"
                    android:layout_alignTop="@id/washer_ll"
                    android:layout_alignLeft="@id/dryer_summary_rl">
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>