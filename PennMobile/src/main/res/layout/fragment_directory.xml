<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DirectoryActivity">

    <TextView
        tools:visibility="gone"
        android:id="@+id/directory_instructions"
        android:text="@string/directory_instructions"
        style="@style/SearchInstructions" />

    <include layout="@layout/no_results" />

    <include layout="@layout/loading_panel" />

    <ListView
        tools:listitem="@layout/directory_list_item"
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>