<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:style="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/dining_hall_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/dining_hall_breakfast_title"
        style="@style/MealName"
        android:text="@string/breakfast" />

    <TextView
        android:id="@+id/dining_hall_breakfast"
        style="@style/Menu" />

    <TextView
        android:id="@+id/dining_hall_brunch_title"
        style="@style/MealName"
        android:text="@string/brunch" />

    <TextView
        android:id="@+id/dining_hall_brunch"
        style="@style/Menu" />

    <TextView
        android:id="@+id/dining_hall_lunch_title"
        style="@style/MealName"
        android:text="@string/lunch" />

    <TextView
        android:id="@+id/dining_hall_lunch"
        style="@style/Menu" />

    <TextView
        android:id="@+id/dining_hall_dinner_title"
        style="@style/MealName"
        android:text="@string/dinner" />

    <TextView
        android:id="@+id/dining_hall_dinner"
        style="@style/Menu" />

</LinearLayout>